<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Calendar.Views.EventDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalhes do Evento"
    BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!--  T√≠tulo do Evento  -->
            <Frame
                Padding="20"
                BackgroundColor="{StaticResource SurfaceColor}"
                CornerRadius="12"
                HasShadow="True">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="T√≠tulo do Evento"
                        TextColor="{StaticResource TextSecondaryColor}" />
                    <Entry
                        x:Name="TitleEntry"
                        FontSize="18"
                        Placeholder="Digite o t√≠tulo do evento"
                        TextColor="{StaticResource TextPrimaryColor}" />
                </StackLayout>
            </Frame>

            <!--  Data do Evento  -->
            <Frame
                Padding="20"
                BackgroundColor="{StaticResource SurfaceColor}"
                CornerRadius="12"
                HasShadow="True">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Data do Evento"
                        TextColor="{StaticResource TextSecondaryColor}" />
                    <DatePicker
                        x:Name="EventDatePicker"
                        FontSize="18"
                        TextColor="{StaticResource TextPrimaryColor}" />
                </StackLayout>
            </Frame>

            <!--  Descri√ß√£o  -->
            <Frame
                Padding="20"
                BackgroundColor="{StaticResource SurfaceColor}"
                CornerRadius="12"
                HasShadow="True">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Descri√ß√£o"
                        TextColor="{StaticResource TextSecondaryColor}" />
                    <Editor
                        x:Name="DescriptionEditor"
                        FontSize="16"
                        HeightRequest="120"
                        Placeholder="Digite a descri√ß√£o do evento"
                        TextColor="{StaticResource TextPrimaryColor}" />
                </StackLayout>
            </Frame>

            <!--  Categoria  -->
            <Frame
                Padding="20"
                BackgroundColor="{StaticResource SurfaceColor}"
                CornerRadius="12"
                HasShadow="True">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Categoria"
                        TextColor="{StaticResource TextSecondaryColor}" />
                    <Picker
                        x:Name="CategoryPicker"
                        FontSize="18"
                        TextColor="{StaticResource TextPrimaryColor}">
                        <Picker.Items>
                            <x:String>Trabalho</x:String>
                            <x:String>Pessoal</x:String>
                            <x:String>Sa√∫de</x:String>
                            <x:String>Educa√ß√£o</x:String>
                            <x:String>Lazer</x:String>
                            <x:String>Fam√≠lia</x:String>
                            <x:String>Outros</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
            </Frame>

            <!--  Cor do Evento  -->
            <Frame
                Padding="20"
                BackgroundColor="{StaticResource SurfaceColor}"
                CornerRadius="12"
                HasShadow="True">
                <StackLayout>
                    <Label
                        Margin="0,0,0,15"
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Cor do Evento"
                        TextColor="{StaticResource TextSecondaryColor}" />
                    <StackLayout
                        HorizontalOptions="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Frame
                            BackgroundColor="#6366f1"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="40"
                            WidthRequest="40">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnColorSelected" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            BackgroundColor="#ef4444"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="40"
                            WidthRequest="40">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnColorSelected" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            BackgroundColor="#10b981"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="40"
                            WidthRequest="40">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnColorSelected" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            BackgroundColor="#f59e0b"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="40"
                            WidthRequest="40">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnColorSelected" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            BackgroundColor="#8b5cf6"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="40"
                            WidthRequest="40">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnColorSelected" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!--  Bot√µes de A√ß√£o  -->
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Padding="20,15"
                    BackgroundColor="{StaticResource TextMutedColor}"
                    Clicked="OnCancelClicked"
                    CornerRadius="25"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancelar"
                    TextColor="White" />

                <Button
                    Padding="20,15"
                    BackgroundColor="{StaticResource AccentColor}"
                    Clicked="OnSaveClicked"
                    CornerRadius="25"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Text="Salvar"
                    TextColor="White" />
            </StackLayout>

            <!--  Bot√£o Deletar (apenas para edi√ß√£o)  -->
            <Button
                x:Name="DeleteButton"
                Padding="20,15"
                BackgroundColor="{StaticResource ErrorColor}"
                Clicked="OnDeleteClicked"
                CornerRadius="25"
                FontSize="16"
                IsVisible="False"
                Text="üóëÔ∏è Deletar Evento"
                TextColor="White" />
        </StackLayout>
    </ScrollView>
</ContentPage>